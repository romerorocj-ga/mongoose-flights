<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight No.</th>
      <th>Departure Date/Time</th>
    </tr>
  </thead>
  <tbody>
    <!-- Iterate over flights using forEach -->
    <% flights.forEach(function(flight) { %>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.flightNo %></td>
        <!-- Format the departure date/time -->
        <td><%= new Date(flight.departs).toLocaleString() %></td>
      </tr>
    <% }); %>
    <!-- Close the forEach loop here -->
  </tbody>
</table>

<%- include('../partials/header') %>
